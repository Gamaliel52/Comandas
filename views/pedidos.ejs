<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5dc;
        }
        .menu-lateral {
            background-color: #4b2e2e;
            color: white;
            height: 100vh;
        }
        .menu-lateral a {
            color: white;
            text-decoration: none;
            padding: 15px;
            display: block;
            font-size: 1.2rem;
        }
        .menu-lateral a:hover, .menu-lateral a.active {
            background-color: #d2691e;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 menu-lateral d-flex flex-column">
                <a href="/pedidos" class="active">Pedidos</a>
                <a href="/menu">Menú</a>
                <% if (user && user.rol === 'Cliente') { %>
                    <a href="/ordenar">Ordenar</a>
                <% } %>
            </div>
            <div class="col-md-9 col-lg-10 p-4">
                <h1 class="mb-4">Historial de Pedidos</h1>
                <form action="/pedidos/buscar" method="GET" class="mb-4">
                    <div class="row">
                        <!-- Campo para seleccionar mesa -->
                        <div class="col-md-6">
                            <label for="mesa" class="form-label">Número de Mesa</label>
                            <select class="form-select" id="mesa" name="mesa">
                                <option value="">Selecciona una mesa</option>
                                <% mesas.forEach(mesa => { %>
                                    <option value="<%= mesa.mesa %>"><%= mesa.mesa %></option>
                                <% }); %>
                            </select>
                        </div>

                        <!-- Campo para seleccionar mesero -->
                        <div class="col-md-6">
                            <label for="mesero" class="form-label">Mesero</label>
                            <select class="form-select" id="mesero" name="mesero">
                                <option value="">Selecciona un mesero</option>
                                <% meseros.forEach(mesero => { %>
                                    <option value="<%= mesero.mesero %>"><%= mesero.mesero %></option>
                                <% }); %>
                            </select>
                        </div>

                        <!-- Botón de búsqueda -->
                        <div class="col-12 d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </div>
                    </div>
                </form>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Mesa</th>
                            <th>Mesero</th>
                            <th class="w-50">Platillos</th> <!-- Extender la columna de platillos -->
                            <th>Hora</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% comandas.forEach(comanda => { %>
                        <tr>
                            <td><%= comanda.id %></td>
                            <td><%= comanda.mesa %></td>
                            <td><%= comanda.mesero %></td>
                            <td><%= comanda.platillos %></td> <!-- Mostrar los platillos -->
                            <td><%= comanda.hora %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>